<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearUsuario">

    <Button
        android:id="@+id/btn_Crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:text="Crear"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/btn_Salir"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="19dp"
        android:text="Atrás"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="460dp" />

    <EditText
        android:id="@+id/txt_NombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_NombreUsuario"
        android:layout_alignStart="@+id/txt_NombreUsuario"
        android:layout_marginBottom="-47dp"
        android:text="Nombre de usuario" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_NombreUsuario"
        android:layout_marginTop="209dp"
        android:text="Tipo de usuario" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_NombreUsuario"
        android:layout_marginTop="112dp"
        android:text="Contraseña" />

    <EditText
        android:id="@+id/txt_Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_NombreUsuario"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/check_TipoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_NombreUsuario"
        android:layout_centerVertical="true"
        android:text="Administrador" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pantalla_general"
    tools:context=".crear_tarea">

    <TextView
        android:id="@+id/textViewDescTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp"
        android:text="Ingrese la descripciÃ³n de la tarea"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textViewNombreTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:text="Ingrese el nombre de la tarea"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textViewTipoTarea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:text="Selecione el tipo de actividad"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Crear tarea"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/buttonCrearTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Crear"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="401dp" />

    <EditText
        android:id="@+id/editTextDescTarea"
        android:layout_width="215dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textViewDescTarea"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/editTextNombreTarea"
        android:layout_width="215dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textViewNombreTarea"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="text"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="127dp" />

    <ImageButton
        android:id="@+id/imageButtonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:layout_editor_absoluteX="337dp"
        tools:layout_editor_absoluteY="0dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTipoTarea2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-230dp">

        <RadioButton
            android:id="@+id/radioButtonTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Productiva" />

        <RadioButton
            android:id="@+id/radioButtonTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Colaborativa" />

        <RadioButton
            android:id="@+id/radioButtonTI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Improductiva" />
    </RadioGroup>

</RelativeLayout>